FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      nut;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include "include/initialConditions"

dimensions      [0 2 -1 0 0 0 0];

internalField   uniform 1.388e-05;

boundaryField
{   
    "inlet.*|outlet.*"
    {
        type            calculated;
        value           $internalField;
    }
    
    "wall.*"
    {
        type            nutkWallFunction;
        value           uniform 0;
    }
    
    #include "include/boundaries"
}


